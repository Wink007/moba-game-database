.container {
//   margin: 0 auto;
  padding: 2rem;
}

.header {
  margin-bottom: 2rem;
}

.titleSection {
  margin-bottom: 1.5rem;
}

.title {
  font-size: 2.5rem;
  font-weight: 700;
  color: #fff;
  margin: 0 0 0.5rem 0;
}

.subtitle {
  font-size: 1.1rem;
  color: #9ca3af;
  margin: 0;
}

.filters {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 1.5rem;
  padding: 2rem;
  background: linear-gradient(135deg, rgba(20, 30, 48, 0.95) 0%, rgba(30, 41, 59, 0.95) 100%);
  border-radius: 12px;
  border: 1px solid rgba(74, 158, 255, 0.2);
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
}

.filterGroup {
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
}

.filterLabel {
  font-size: 0.75rem;
  font-weight: 700;
  color: #8b92a6;
  text-transform: uppercase;
  letter-spacing: 1px;
}

.select {
  background: rgba(15, 23, 42, 0.8);
  border: 2px solid rgba(74, 158, 255, 0.3);
  border-radius: 8px;
  color: #e2e8f0;
  padding: 0.875rem 1.25rem;
  font-size: 1rem;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.3s ease;
  appearance: none;
  background-image: url("data:image/svg+xml,%3Csvg width='12' height='8' viewBox='0 0 12 8' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M1 1.5L6 6.5L11 1.5' stroke='%234a9eff' stroke-width='2' stroke-linecap='round' stroke-linejoin='round'/%3E%3C/svg%3E");
  background-repeat: no-repeat;
  background-position: right 1rem center;
  padding-right: 3rem;

  &:hover {
    border-color: #4a9eff;
    background-color: rgba(20, 30, 48, 0.9);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(74, 158, 255, 0.2);
  }

  &:focus {
    outline: none;
    border-color: #4a9eff;
    box-shadow: 0 0 0 3px rgba(74, 158, 255, 0.15);
  }

  option {
    background: #0f172a;
    color: #e2e8f0;
    padding: 0.5rem;
  }

  option {
    background: #0f172a;
    color: #e2e8f0;
    padding: 0.5rem;
  }
}

.heroGrid {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
  margin-bottom: 2rem;
}

.heroCard {
  display: grid;
  grid-template-columns: 60px 60px 1fr 120px 120px 120px 250px;
  align-items: center;
  gap: 1rem;
  padding: 0.75rem 1.5rem;
  background: linear-gradient(90deg, rgba(74, 158, 255, 0.2) 0%, rgba(74, 158, 255, 0.01) 90%);
  border-radius: 4px;
  transition: all 0.2s ease;
//   border: 1px solid transparent;
  height: 70px;

  &:hover {
    background: rgba(40, 51, 69, 0.9);
    border-color: rgba(74, 158, 255, 0.3);
  }
}

.rankBadge {
  font-size: 1.5rem;
  font-weight: 700;
  color: #8b92a6;
  text-align: center;
  min-width: 40px;
}

.heroImage {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  overflow: hidden;
  border: 2px solid rgba(74, 158, 255, 0.3);
  flex-shrink: 0;

  img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
}

.heroName {
  font-size: 1.1rem;
  font-weight: 600;
  color: #e2e8f0;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.stat {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 0.25rem;
}

.statLabel {
  font-size: 0.7rem;
  color: #8b92a6;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  font-weight: 600;
}

.statValue {
  font-size: 1rem;
  font-weight: 600;
  color: #e2e8f0;
}

.counterHeroes {
  display: flex;
  gap: 0.25rem;
  align-items: center;
  justify-self: end;
}

.counterHeroIcon {
  width: 38px;
  height: 38px;
  border-radius: 50%;
  border: 2px solid rgba(74, 158, 255, 0.2);
  transition: all 0.2s ease;
  cursor: pointer;

  &:hover {
    transform: scale(1.1);
    border-color: rgba(74, 158, 255, 0.6);
    z-index: 10;
  }
}

// Топ-3 стилі
.first {
  background: linear-gradient(90deg, rgba(255, 215, 0, 0.2) 0%, rgba(17, 24, 39, 0.01) 90%);
}

.second {
  background: linear-gradient(90deg, rgba(192, 192, 192, 0.2) 0%, rgba(17, 24, 39, 0.01) 90%);
}

.third {
  background: linear-gradient(135deg, rgba(205, 127, 50, 0.2) 0%, rgba(17, 24, 39, 0.01) 100%)
}

// Skeleton
@keyframes pulse {
  0%, 100% {
    opacity: 0.4;
  }
  50% {
    opacity: 1;
  }
}

.heroCardSkeleton {
  height: 70px;
  background: rgba(30, 41, 59, 0.6);
  border-radius: 4px;
  animation: pulse 1.5s ease-in-out infinite;
}

// Load More
.loadMoreSection {
  display: flex;
  justify-content: center;
  padding: 2rem 0;
}

.loadMoreButton {
  padding: 1rem 3rem;
  background: linear-gradient(135deg, #4a9eff 0%, #357abd 100%);
  color: #fff;
  border: none;
  border-radius: 8px;
  font-size: 1.1rem;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
  box-shadow: 0 4px 12px rgba(74, 158, 255, 0.3);

  &:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(74, 158, 255, 0.5);
  }

  &:active {
    transform: translateY(0);
  }
}

.error,
.noData {
  color: #ef4444;
  text-align: center;
  padding: 3rem;
  background: rgba(239, 68, 68, 0.1);
  border: 1px solid #ef4444;
  border-radius: 12px;
  font-size: 1.1rem;
}

.noData {
  color: #9ca3af;
  background: rgba(156, 163, 175, 0.1);
  border-color: #9ca3af;
}

// Responsive
@media (max-width: 1024px) {
  .heroCard {
    grid-template-columns: 50px 50px 1fr 100px 100px 100px;
    gap: 0.75rem;
    padding: 0.5rem 1rem;
  }

  .counterHeroes {
    display: none;
  }

  .counterHeroIcon {
    width: 32px;
    height: 32px;
  }
}

@media (max-width: 768px) {
  .container {
    padding: 1rem;
  }

  .title {
    font-size: 2rem;
  }

  .filters {
    flex-direction: column;
    padding: 1rem;
  }

  .filterGroup {
    min-width: 100%;
  }

  .heroCard {
    grid-template-columns: 40px 45px 1fr;
    gap: 0.5rem;
    padding: 0.75rem;
    height: auto;
    min-height: 60px;
  }

  .rankBadge {
    font-size: 1.2rem;
  }

  .first .rankBadge,
  .second .rankBadge,
  .third .rankBadge {
    font-size: 1.5rem;
  }

  .heroImage {
    width: 45px;
    height: 45px;
  }

  .heroName {
    font-size: 1rem;
    grid-column: 4 / -1;
  }

  .stat {
    display: none;
  }

  .counterHeroes {
    display: none;
  }
}

@media (max-width: 480px) {
  .title {
    font-size: 1.5rem;
  }

  .subtitle {
    font-size: 0.95rem;
  }

  .heroCard {
    padding: 0.5rem;
  }

  .rankBadge {
    font-size: 1rem;
    min-width: 30px;
  }

  .first .rankBadge,
  .second .rankBadge,
  .third .rankBadge {
    font-size: 1.25rem;
  }

  .heroImage {
    width: 40px;
    height: 40px;
  }

  .heroName {
    font-size: 0.95rem;
  }

  .loadMoreButton {
    padding: 0.875rem 2rem;
    font-size: 1rem;
  }
}
